{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "build",
        "lib": [
            "ESNext",
            "ESNext.Array",
            "ESNext.AsyncIterable",
            "ESNext.Intl",
            "ESNext.Symbol",
            "DOM"
        ],
        "allowJs": true,
        "declaration": true,
        "isolatedModules": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "strict": true,
        "incremental": true,
        "removeComments": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        // "paths": {
        //     "@base": ["./*"],
        //     "@node_modules": ["./node_modules/*"],
        //     "@src/*": ["./src/*"],
        //     "@models/*": ["./src/models/*"],
        //     "@routes/*": ["./src/routes/*"],
        //     "@utils/*": ["./src/utils/*"],
        // }
    },
    "include": ["src/**/*", "src/index.ts"],
    "exclude": ["node_modules"]
}
